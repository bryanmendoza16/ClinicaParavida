@model IEnumerable<ClinicaParavida.Models.Enfermera>

@{
    ViewBag.Title = "Inicio";
}

<h2>Programar cita-Enfermera</h2>

<img src="~/image/PARAVIDA_Logo.png" width="715" height="350"     />
<p>
    @Html.ActionLink("Agregar", "Create", null ,new { @class = "btn btn-outline-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dui)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dui)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CodigoEnfermera }, new { @class = "btn btn-outline-success", onclick = "return confirm('¿Estás seguro de que quieres Editar este elemento?');" })
                @Html.ActionLink("Detalles", "Details", new { id = item.CodigoEnfermera }, new { @class = "btn btn-outline-primary", })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.CodigoEnfermera }, new { @class = "btn btn-outline-danger", onclick = "return confirm('¿Estás seguro de que quieres eliminar este elemento?');" })
            </td>
        </tr>
    }

</table>
